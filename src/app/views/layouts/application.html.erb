<!DOCTYPE html>
<html>
  <head>
    <title>Rails Bookshelf</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_author %>
    <nav class="navbar navbar-expand-lg navbar-light bg-light" style="background-color: #71da71;">
      <a class="navbar-brand" href="#">The Shelf</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to 'My Profile', author_path(current_author), :class => "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Logout', logout_path, :class => "nav-link" %>
          </li>
        </ul>
      </div>
    </nav>
    <% end %>

    <%= yield %>
  </body>
</html>
